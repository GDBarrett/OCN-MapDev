<?xml version="1.0"?>

-<map proto="1.3.2">

<include src="../bn-elements.xml"/>

<name>BN: Spacecraft</name>

<version>1.0.0</version>

<objective>Use your grenades and TNT to blow up as many people as you can!</objective>


-<authors>

<author>Holdfast33</author>

<author>DiamondAx</author>

</authors>


-<contributors>

<contriubutor contribution="Spawners and Feedback">ItsMiiOlly</contriubutor>

</contributors>


-<teams>

<team max-overfill="10" max="8" color="blue">Blue Team</team>

<team max-overfill="10" max="8" color="dark red">Red Team</team>

</teams>


-<kits>


-<kit name="blue">

<chestplate color="0000ff">leather chestplate</chestplate>

</kit>


-<kit name="red">

<chestplate color="cd0000">leather chestplate</chestplate>

</kit>

</kits>


-<filters>


-<filter name="only-tnt" parents="deny-blocks">


-<allow>

<block>tnt</block>

</allow>

</filter>


-<filter name="deny-some">


-<deny>

<block>beacon</block>

</deny>

</filter>


-<filter name="only-blue" parents="deny-players">


-<allow>

<team>blue</team>

</allow>

</filter>


-<filter name="only-red" parents="deny-players">


-<allow>

<team>red</team>

</allow>

</filter>

</filters>


-<regions>

<cuboid max="-284,15,955" name="blue-base" min="-276,11,950"/>

<cuboid max="-284,15,892" name="red-base" min="-276,11,886"/>


-<apply message="You can only use TNT!" block="only-tnt">

<cuboid max="-oo,-oo,-oo" min="oo,oo,oo"/>

</apply>


-<apply block="only-tnt" use="deny-some">

<cuboid max="-oo,-oo,-oo" min="oo,oo,oo"/>

</apply>


-<apply message="You cannot enter the enemy spawn!" enter="only-blue">

<region name="blue-base"/>

</apply>


-<apply message="You cannot enter the enemy spawn!" enter="only-red">

<region name="red-base"/>

</apply>


-<apply message="You may not place in the spawns!" block="deny-blocks">

<region name="blue-base"/>

<region name="red-base"/>

</apply>

</regions>


-<spawns>


-<spawn yaw="-175" kit="blue" team="blue">

<cuboid max="-281,11,954" min="-278,11,952"/>

</spawn>


-<spawn yaw="5" kit="red" team="red">

<cuboid max="-281,11,890" min="-278,11,888"/>

</spawn>


-<default yaw="90">

<cylinder height="0" radius="3" base="-335,35,921"/>

</default>

</spawns>

<timelock>on</timelock>

</map>